<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CatThimblesGameMainActivity">

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/thimblesArea"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            >

        <ImageView
                android:id="@+id/firstCat"
                android:contentDescription="@string/image_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/game_cat"
                />
        <ImageView
                android:id="@+id/secondCat"
                android:contentDescription="@string/image_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/game_cat"
                />
        <ImageView
                android:id="@+id/thirdCat"
                android:contentDescription="@string/image_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/game_cat"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_gravity="end"
            android:layout_weight="1"
            >

        <Button
                android:id="@+id/show"
                android:background="@drawable/round_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/show_button"
                android:layout_marginEnd="10dp"/>
        <Button
                android:id="@+id/rest"
                android:background="@drawable/round_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/rest_button"/>
    </LinearLayout>

</LinearLayout>

</android.support.constraint.ConstraintLayout>